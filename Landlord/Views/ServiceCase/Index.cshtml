@model IEnumerable<Landlord.Models.ServiceCaseViewModel>

@{
    ViewBag.Title = "Ärenden";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ärenden</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CaseNr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FlatNr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactEmail)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="../ServiceCasePost?caseNr=@Html.DisplayFor(modelItem => item.CaseNr)">@Html.DisplayFor(modelItem => item.CaseNr)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlatNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactEmail)
            </td>
        </tr>
    }
</table>